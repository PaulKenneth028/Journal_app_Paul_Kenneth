<div class="container mt-4">
  <h1>Tasks</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Due Date</th>
        <th>Category</th>
        <th>Show</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.description %></td>
          <td><%= task.due_date %></td>
          <td><%= task.category.name %></td>
          <td><%= link_to "Show", task_path(task) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div id="tasks">
    <% @tasks.each do |task| %>
      <div class="card mb-3"></div>
    <% end %>
  </div>

  <%= link_to "New task", new_task_path, class: "btn btn-primary" %>
</div>
