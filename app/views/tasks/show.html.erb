<div class="container mt-4">
  <h1 class="mb-4">Task Details</h1>

  <div class="card">
    <div class="card-body">
      <p class="card-text">
        <strong>Title:</strong>
        <%= @task.title %>
      </p>

      <p class="card-text">
        <strong>Description:</strong>
        <%= @task.description %>
      </p>

      <p class="card-text">
        <strong>Due Date:</strong>
        <%= @task.due_date %>
      </p>

      <div class="btn-group" role="group">
        <%= link_to "Edit this task", edit_task_path(@task), class: "btn btn-primary" %>
        <%= link_to "Back to tasks", tasks_path, class: "btn btn-secondary" %>
        <%= button_to "Destroy this task", @task, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
